<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_background_rounded">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir une image de groupe"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimary"/>

    <!-- Grille des images prédéfinies -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center_horizontal">

        <!-- Image 1 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_1"
            android:layout_margin="10dp"/>

        <!-- Image 2 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_2"
            android:layout_margin="10dp"/>

        <!-- Image 3 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_3"
            android:layout_margin="10dp"/>

        <!-- Image 4 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_4"
            android:layout_margin="10dp"/>

        <!-- Image 5 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_5"
            android:layout_margin="10dp"/>

        <!-- Image 6 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_preset_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupe_image_6"
            android:layout_margin="10dp"/>

    </GridLayout>

    <Button
        android:id="@+id/btn_choose_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir depuis la galerie"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorSecondary"/>

</LinearLayout>
