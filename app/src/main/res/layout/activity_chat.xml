<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorSecondary"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retour"
            android:src="@drawable/back" />

        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profil" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="UserName1234..."
            android:textColor="@color/colorTextOnPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/chat_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:scaleType="centerInside"
            android:src="@drawable/pvertic"
            app:tint="@color/colorTextOnPrimary" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/chat_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_inputchat"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">


            <ImageButton
                android:id="@+id/stick"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Stickers"
                android:scaleType="centerInside"
                android:src="@drawable/stick" />

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Message"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:minHeight="48dp"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorTextOnPrimary"
                android:textColorHint="#B3FFFFFF" />
            <ImageButton
                android:id="@+id/file"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="2dp"
                android:paddingRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fichier"
                android:scaleType="centerInside"
                android:src="@drawable/photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_circle_sendchat"
            android:gravity="center">

            <ImageButton
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Envoyer"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:src="@drawable/send" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>