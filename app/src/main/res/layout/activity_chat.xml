<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <!-- Barre du haut -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorSecondary"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        tools:ignore="RtlSymmetry">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retour"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/img"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:text="UserName"
            android:textColor="@color/colorTextOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- LE BOUTON MENU A ÉTÉ SUPPRIMÉ -->

    </LinearLayout>

    <!-- Liste des messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground"
        android:clipToPadding="false"
        android:paddingBottom="10dp" />

    <!-- Barre d'envoi de message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_inputchat"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <!-- LE BOUTON STICKER A ÉTÉ SUPPRIMÉ -->

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Message"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:minHeight="48dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorTextOnPrimary"
                android:textColorHint="#B3FFFFFF" />

            <ImageButton
                android:id="@+id/file"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fichier"
                android:paddingEnd="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_circle_sendchat"
            android:gravity="center">

            <ImageButton
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Envoyer"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/send" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
